<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh"
        crossorigin="anonymous"></script>

</head>

<body>
    <!-- Navigation -->
    <% include ./partials/_navbar %>

        <!-- Search Bar -->
        <div class="p-4"
        <% include ./partials/_searchbar %>
        </div>

            <!-- Page Content -->
            <div class="container">
                <h4 class="p-2" style="color:#253C31">Search Results:</h4>
            </div>

            <div class="container">
                <div class="card-deck">
                    <div class="row p-3">
                        <% for (var i = 0; i < title.length; i++) { %>
                            <div class="col-md-4 text-center p-2">
                                <img class="card-img-top mx-auto d-block" height="190px" src="<%= thumbnail[i] %>">
                                <div class="card-block">
                                    <h6 class="card-title">
                                        <%= title[i] %>
                                    </h6>
                                    <p class="card-text">
                                        By <%= author[i] %>
                                    </p>
                                    <div class="row">
                                        <div class="col-sm">
                                            <% var test = lenders[i].first_name %>
                                            <%= test %>
                                            <i class="fa fa-exchange" aria-hidden="true"></i>
                                        </div>
                                        <div class="col-sm">
                                            <i class="fa fa-search" aria-hidden="true"></i>
                                        </div>
                                        <div class="col-sm">
                                            <i class="fa fa-amazon" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
            
    <!-- Footer -->
    <% include ./partials/_footer %>
</body>

</html>